extends admin-layout
include includes/mixins

block jumbo-desc
    h3 Edit User Guide

block admin-content
    .container-fluid
        form(action= "/admin/edit/userGuide" method="post")
            +input_textarea('in', 'UserGuide Markdown Editor', 'Write text here...', true, userGuide)
            .row
                h3 Preview
                #markdown.col-lg-12
            .form-group
                button.btn.btn-default(name='save' type='submit' value='Save' role='submit') Save
        script(rel='javascript' src='/js/showdown.min.js')
        script(rel='javascript' src='/js/mdEditor.js')
