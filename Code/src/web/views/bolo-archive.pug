extends layout

block jumbo
    .jumbotron
        .container
            p Archived BOLOs


block content
    include partials/global-alerts

    link(rel="stylesheet" href="https://code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css")

    if bolos && 0 === bolos.length
        p.lead No archived BOLOs.

    else

        if (userTier === 'ROOT')
            div.col-xs-12.pull-right
                form( action= '/bolo/purge/' method="post" ).form-group.pull-right
                    //TODO Create a purge date range to delete BOLOs
                    //label.control-label(for="purgeRange") Bolos Older Than:
                        select#purgeRange(name="purgeRange")
                            option(value='1') One Year
                            option(value='2') Two Years
                            option(value='3') All Archived Bolos
                    button.btn.btn-danger(type='submit')
                        | Purge
            include partials/dialog-box

        .row
            for bolo in bolos
                include partials/bolo-thumbnail
                    if (userTier === 'ROOT' || userTier === 'ADMINISTRATOR')
                        .actions.row
                            a.btn.btn-primary( href="/bolo/details/" + bolo.id role="button" ) View
                            form( action= '/bolo/unarchive/' + bolo.id method="post" )
                                button.btn.btn-success( href="/bolo/restore/" + bolo.id role="button" type="submit" ) Restore
                            form( action= '/bolo/delete/' + bolo.id method="post" )
                                button.btn.btn-danger( type='submit' onclick="return confirm('Are you sure you want to delete this bolo?')")
                                    | Delete
                    else
                        .actions
                            a.btn.btn-primary( href="/bolo/details/" + bolo.id role="button" ) View

        .row.text-center
            include partials/paging