extends layout

block jumbo
    .jumbotron
        .container
            .row
                div.col-xs-12
                    p BOLO Details
            .row
                .col-xs-14.col-md-6
                    .pull-left
                        button.btn.btn-primary(onclick='history.go(-1);') Go Back
                .col-xs-14.col-md-6
                    .pull-right
                        if((bolo.record) && (tier > 2))
                            a.btn.btn-default.pull-right( href="/bolo/details/record/" + bolo.id) View Record


block content

    include partials/global-alerts

    div#boloPage.container-fluid
        div.row
            div.col-xs-2
                img#logo.img-fluid( src='/img/agency/logo/' + agency.id alt="Agency Logo")
            div.col-xs-8.text-center
                p.text-danger #{"UNCLASSIFIED// FOR OFFICIAL USE ONLY// LAW ENFORCEMENT SENSITIVE"}
                    p.strong #{agency.name} Police Department
                    p
                        em #{agency.address}
                    p
                        em #{agency.city}, #{agency.state}. #{agency.zip}
                    p
                        em #{agency.phone}
            div.col-xs-2
                img#badge.img-fluid( src='/img/agency/shield/' + agency.id alt="Agency Shield" )
        .row
            if(bolo.status !== 'ACTIVE')
                div#updatedstatus.col-xs-12
                    p.text-center.text-danger.strong #{bolo.status}
            else
                div.col-xs-12
                    p.text-center.text-danger.strong #{bolo.status}

        //Render Images
        div.col-md-12
            if (bolo.featured.data && !bolo.other1.data && !bolo.other2.data)
                img#featured.img-fluid( src='data:image/jpg;base64, #{bolo.featured.binary.buffer}')

            else if (bolo.featured.data && bolo.other1 && !bolo.other2.data)
                img#secondarysettingsleft(src="/img/bolo/other1/" + bolo.id)
                img#featured(src="/img/bolo/featured/" + bolo.id)

            else if (bolo.featured.data && !bolo.other1 && bolo.other2.data)
                img#secondarysettingsright.img-responsive(src="/img/bolo/other2/" + bolo.id)
                img#featured.img-responsive(src="/img/bolo/featured/" + bolo.id)

            else if (bolo.featured.data && bolo.other1.data && bolo.other2.data)
                img#secondaryimage(src="/img/bolo/other1/" + bolo.id)
                img#featured(src="/img/bolo/featured/" + bolo.id)
                img#tertiaryimage(src="/img/bolo/other2/" + bolo.id)

        div.row
            br
            br
            div.col-xs-8#boloDetails
                form.form-horizontal
                br
                br
                div.col-xs-8#boloDetails
                    p.strong BOLO ID :
                div.row
                    p &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp  #{bolo.id}

                - for (var i = 0; i < bolo.fields.length; i++)
                    div.col-xs-8#boloDetails
                        p.strong #{category.fields[i]} :
                    div.row
                        p &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp  #{bolo.fields[i]}


        div.row
            div.col-xs-8
        div.row
            div.col-xs-8#created
                p.strong Created: #{bolo.createdOn}
        div.col-xs-8#additionalDetails
            form.form-horizontal
            | &nbsp;
            p.strong Additional Info:
            if bolo.info.length
                p #{bolo.info}
            else
                | &nbsp;
            | &nbsp;
            if bolo.videoURL.length
                p.strong Video Link:
                a(href=bolo.videoURL) #{bolo.videoURL}
                p
            | &nbsp;
            p.strong Summary:
            if bolo.summary.length
                p #{bolo.summary}
            else
                | &nbsp;
            if bolo.author.firstname != null || bolo.author.lastname != null
                p.strong This BOLO was created by #{bolo.author.unit}  #{bolo.author.rank} #{bolo.author.firstname} #{bolo.author.lastname}.
                p.strong Please contact the agency should clarification be required.
